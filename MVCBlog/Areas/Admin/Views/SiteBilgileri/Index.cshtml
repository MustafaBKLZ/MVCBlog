@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<MVCBlog.Areas.Admin.Models.DTO.SiteBilgileriVM>
<div class="row mt">
    <div class="col-lg-12">
        <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i>Kategori Listesi</h4>
            <div class="container">
                <section id="unseen">
                    @foreach (var item in Model)
                    {
                        if (Model.Count > 0)
                        {
                            <a class="btn btn-success" style="cursor:pointer" title="Değiştir" href="/Admin/SiteBilgileri/SitebilgileriGuncelle/@item.ID">
                                <span class="fa fa-pencil-square-o"></span> Güncelle
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-success" style="cursor:pointer" title="Ekle" href="/Admin/SiteBilgileri/SitebilgileriKaydet">
                                <span class="fa fa-pencil-square-o"></span> Kaydet
                            </a>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</div>