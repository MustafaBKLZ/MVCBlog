
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model MVCBlog.Areas.Admin.Models.DTO.KategoriVM

<div class="container">

    <!-- INLINE FORM ELELEMNTS -->
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Kategori Ekle</h4>

                @using (Html.BeginForm())
                {
                    
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.LabelFor(x => x.kat_adi)
                            <br />
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" id="exampleInputEmail2" placeholder=" ">
                            <br />
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.LabelFor(x => x.kat_aciklama)
                        </div>
                        <div class="col-md-10">
                            <input type="text" class="form-control" id="exampleInputPassword2" placeholder="">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-theme">Sign in</button>


                }

            </div><!-- /form-panel -->
        </div><!-- /col-lg-12 -->
    </div><!-- /row -->

</div>